{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug HelloIMGUI",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/HelloIMGUI",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/external/vulkan/linux/bin"
                },
                {
                    "name": "VK_LAYER_PATH",
                    "value": "external/vulkan/linux/etc/explicit_layer.d"
                }
            ],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "BuildAll"
        },
        {
            "name": "Debug Triangle",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/Triangle",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/external/vulkan/linux/bin"
                },
                {
                    "name": "VK_LAYER_PATH",
                    "value": "external/vulkan/linux/etc/explicit_layer.d"
                }
            ],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "BuildAll"
        }
    ]
}